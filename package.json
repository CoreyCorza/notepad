{
    "name": "notepad",
    "version": "1.0.7",
    "description": "A simple not-microsoft notepad app.",
    "main": "electron/main.js",
    "author": "CoreyCorza",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "icon": "node scripts/make-ico.cjs",
        "build": "npm run icon && electron-builder"
    },
    "build": {
        "appId": "com.coreycorza.notepad",
        "productName": "Notepad",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Notepad",
            "include": "build/installer.nsh"
        },
        "fileAssociations": [
            {
                "ext": "txt",
                "name": "Text Document",
                "description": "Text Document",
                "role": "Editor"
            },
            {
                "ext": "md",
                "name": "Markdown Document",
                "role": "Editor"
            }
        ]
    },
    "devDependencies": {
        "electron": "^33.2.0",
        "electron-builder": "^24.13.3",
        "png-to-ico": "^3.0.1"
    },
    "dependencies": {
        "jschardet": "^3.1.4",
        "marked": "^17.0.1"
    }
}
